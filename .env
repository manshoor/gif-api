# Server Configuration
PORT=3000
HOST=localhost

# Viewport Configuration
VIEWPORT_WIDTH=1024
VIEWPORT_HEIGHT=768

# Screenshot and GIF Configuration
SCREENSHOT_DELAY=3.5
DEFAULT_DURATION=15
GIF_QUALITY=10

# Directory Configuration
SCREENSHOTS_DIR=temp_screenshots
GIFS_DIR=public/gifs

# Browser Configuration
MAX_BROWSER_INSTANCES=3
BROWSER_TIMEOUT=30000
PUPPETEER_HEADLESS=new
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium

# Redis Configuration
REDIS_URL=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_CACHE_TIME=3600000


# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# API Keys Configuration (JSON format)
API_KEYS={"test-key":{"rateLimit":100},"prod-key":{"rateLimit":1000}}

# Node Environment
NODE_ENV=development

# Logging Configuration
LOG_LEVEL=info